{
  "name": "opencapai-chat-studio",
  "version": "1.2.0",
  "description": "A professional AI Chat Studio built with SAP CAP and SAPUI5, featuring multi-model support and streaming simulation.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opencapai/opencapai-chat-studio.git"
  },
  "keywords": [
    "sap",
    "cap",
    "ui5",
    "ai",
    "llm",
    "chat",
    "btp"
  ],
  "author": "Maximilien GRZECZKA",
  "license": "Apache-2.0",
  "dependencies": {
    "@sap-ai-sdk/orchestration": "^2.7.0",
    "@sap/cds": "^9.7.1",
    "@sap/cds-fiori": "^2.2.0",
    "@sap/hana-client": "^2.27.23",
    "dompurify": "^3.3.1",
    "express": "^5.2.1",
    "marked": "^17.0.3"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2.1.3",
    "@sap/cds-dk": "^9.7.2"
  },
  "scripts": {
    "db": "npx cds deploy --to sqlite",
    "start": "cds-serve",
    "watch": "cds watch",
    "build": "cds build --production"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql"
      },
      "[production]": {
        "db": {
          "kind": "hana",
          "credentials": {
            "url": "SYSTEMDB"
          }
        }
      },
      "[development]": {
        "db": {
          "kind": "sqlite",
          "credentials": {
            "url": "db.sqlite"
          }
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "build": {
      "target": "gen",
      "tasks": [
        {
          "for": "hana",
          "dest": "../db"
        },
        {
          "for": "nodejs"
        }
      ]
    }
  }
}